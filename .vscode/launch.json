{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Cube3D",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cub3D", 
            "args": ["path/to/map.cub"], 
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/lldb"
        }
    ]
}
